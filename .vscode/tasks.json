{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
    "version": "2.0.0",	
	"type": "shell",	
	"echoCommand": true,
	"cwd": "${workspaceFolder}",
	"tasks": [
    {
      "label": "default",
      "command": "go run Pikari",    
      "problemMatcher": [
        "$go"
      ]
    },
    {
      "label": "Hello",
      "command": "go run Pikari -app=Hello",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$go"
      ]
    }
  ]
}